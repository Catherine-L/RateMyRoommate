  <h2>Log In</h2>
  {{#if message}}
    <p><strong>Error: </strong>{{message}}</p>
  {{/if}}

  <div class="form-group hidden" id="error-container">
    <div class="alert alert-danger text-goes-here">
    </div>
  </div>
  <form class="form-horizontal" action="/signup" method="post">
    <div class="form-group">
      <label for="firstname">First Name:</label>
      <input id="firstname" class="form-control" type="text" name="firstname" />
        <br/>
    </div>
    <div class="form-group">
      <label for="lastname">Last Name:</label>
      <input id="lastname" class="form-control" type="text" name="lastname" />
        <br/>
    </div>
    <div class="form-group">
      <label for="email">Email:</label>
      <input id="email" class="form-control" type="text" name="email" />
        <br/>
    </div>
    <div class="form-group">
      <label for="password">Password:</label>
        <input id="password" class="form-control" type="password" name="password" />
        <br/>
    </div>
    <div class="form-group">
      <label for="city">City:</label>
        <input id="city" class="form-control" type="text" name="city" />
        <br/>
    </div>
    <div class="form-group">
      <label for="state">State:</label>
        <input id="state" class="form-control" type="text" name="state">
        <br/>
    </div>
    <div class="form-group">
      <label for="country">Country:</label>
        <input id="country" class="form-control" type="text" name="country" />
        <br/>
    </div>
    <div class="form-group">
      <input class="form-control" type="submit" value="Submit" />
    </div>
  </form>
